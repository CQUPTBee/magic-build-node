<div class="mod-banner">
  {{listTitle}}
  <ul class="banner-wrap">
    {{#each bannerList}}
    <li class="banner-list">
      <a href="{{this.href}}" class="banner-list-herf">
        <img src="{{this.imgUrl}}" alt="" class="banner-img">
        <h3 class="banner-title">{{this.title}}</h3>
      </a>
    </li>
    {{/each}}
  </ul>
</div>